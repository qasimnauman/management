                max-width: clamp(200px, 50vw, 250px);
            }

        .login-right {
            width: 100%;
            padding: clamp(15px, 3vw, 30px);
        }

        .login-text {
            font-size: clamp(24px, 5vw, 30px);
        }

        .welcome {
            font-size: clamp(16px, 4vw, 20px);
        }
    }

    @@media (max-width: 768px) {
