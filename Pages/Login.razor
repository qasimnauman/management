        }

    /* Enhanced Responsive Styles */
    @@media (max-width: 1024px) {
        .login-card {
            flex-direction: column;
            align-items: center;
            padding: clamp(20px, 4vw, 30px);
            margin: 20px;
        }

        .login-left {
            padding: clamp(10px, 2vw, 20px);
        }

