            padding: 15px;
            min-height: 100vh;
            height: auto;
        }

        .login-card {
            margin: 10px;
            padding: 20px;
        }

        .form-control {
            padding: clamp(8px, 2vw, 12px);
            font-size: clamp(14px, 3vw, 16px);
        }

        .login-button {
            padding: clamp(10px, 2vw, 12px);
        }
    }

    @@ media (max-width: 480px) {
        .login-container {
            padding: 10px;
        }

        .login-card {
            padding: 15px;
            margin: 5px;
            gap: 15px;
        }

        .login-left img {
            max-width: 150px;
        }

        .login-right {
            padding: 15px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-size: 14px;
        }

        .eye-button {
            padding: 8px;
        }
    }

    /* Form Validation Enhancement */
    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
    }

    .form-control:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.1);
    }

    /* Touch Device Optimization */
    @@ media (hover: none) {
        .login-button {
            padding: 14px;
        }

        .eye-button {
            padding: 12px;
        }
    }

    /* Print Styles */
    @@ media print {
        .login-container {
            height: auto;
        }

        .login-card {
            box-shadow: none;
            border: 1px solid #ccc;
        }

        .login-button {
            background: #333;
        }
    }
</style>
